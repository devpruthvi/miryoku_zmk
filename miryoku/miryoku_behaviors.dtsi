#define KEYS_L  0  1  2  3  4  5 \
               13 14 15 16 17 18 \
               26 27 28 29 30 31 \
               39 40 41 42 43 44


#define KEYS_R  7  8  9 10 11 12 \
               20 21 22 23 24 25 \
               33 34 35 36 37 38 \
               46 47 48 49 50 51

#define THUMBS 54 55 56 60 61 62

#define U_PRIOR_IDLE 110

/ {
  behaviors {
    u_mt: u_mt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    };

    // https://github.com/urob/zmk-config?tab=readme-ov-file#timeless-homerow-mods
    u_mtl: u_mtl {
        compatible = "zmk,behavior-hold-tap";
        label = "u_mtl";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping_term_ms = <U_TAPPING_TERM>;
        quick-tap-ms = <175>;
        require-prior-idle-ms = <U_PRIOR_IDLE>;
        bindings = <&kp>, <&kp>;
        hold-trigger-key-positions = <KEYS_R THUMBS>;
        hold-trigger-on-release;
    };
    u_mtr: u_mtr {
        compatible = "zmk,behavior-hold-tap";
        label = "u_mtr";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping_term_ms = <U_TAPPING_TERM>;
        quick-tap-ms = <175>;
        require-prior-idle-ms = <U_PRIOR_IDLE>;
        bindings = <&kp>, <&kp>;
        hold-trigger-key-positions = <KEYS_L THUMBS>;
        hold-trigger-on-release;
    };

    u_lt: u_lt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&mo>, <&kp>;
    };
  };
};
